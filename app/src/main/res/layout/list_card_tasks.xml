<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/card_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:cardUseCompatPadding="true"
        card_view:cardElevation="4dp">

        <TextView
            android:layout_width="match_parent"
            android:background="#6e498fe1"
            android:text="High Priority"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:paddingTop="16dp">



            <ImageView
                android:id="@+id/iv_profileIcon"
                android:layout_width="72dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_height="72dp" />

            <TextView
                android:id="@+id/tv_patientName"
                android:text="Name here"
                android:textSize="18sp"
                android:padding="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_profileIcon" />

            <TextView
                android:id="@+id/tv_roomNumber"
                android:text="Room here"
                android:padding="3dp"
                android:textSize="14sp"
                android:textColor="#d0b196"
                android:layout_width="wrap_content"
                android:layout_alignTop="@+id/tv_patientName"
                android:layout_alignParentEnd="true"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_patientName" />

            <ImageView
                android:id="@+id/iv_insight"
                android:layout_width="24px"
                android:layout_height="24px"
                android:layout_below="@+id/tv_patientName" />

            <TextView
                android:id="@+id/tv_insight"
                android:text="status here"
                android:padding="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#898989"
                android:layout_below="@+id/tv_patientName"
                android:layout_toRightOf="@+id/iv_profileIcon" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>