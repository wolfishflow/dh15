<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/card_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:cardUseCompatPadding="true"
        card_view:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:paddingTop="16dp">

            <ImageView
                android:id="@+id/iv_profileIcon"
                android:layout_width="48dp"
                android:layout_height="48dp" />

            <TextView
                android:id="@+id/tv_patientName"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_profileIcon" />

            <TextView
                android:id="@+id/tv_roomNumber"
                android:textSize="15sp"
                android:textColor="#d0b196"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_patientName" />

            <ImageView
                android:id="@+id/iv_iconStatus1"
                android:layout_width="24px"
                android:layout_height="24px"
                android:layout_below="@+id/tv_patientName" />

            <TextView
                android:id="@+id/tv_textStatus1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#898989"
                android:layout_below="@+id/tv_patientName"
                android:layout_toRightOf="@+id/iv_profileIcon" />

            <ImageView
                android:id="@+id/iv_iconStatus2"
                android:layout_width="24px"
                android:layout_height="24px"
                android:layout_below="@+id/tv_textStatus1"
                android:layout_toRightOf="@+id/iv_profileIcon" />

            <TextView
                android:id="@+id/tv_textStatus2"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:textColor="#898989"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_textStatus1"
                android:layout_toRightOf="@+id/iv_profileIcon" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>
